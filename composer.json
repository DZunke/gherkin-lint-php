{
    "name": "dantleech/behat-lint",
    "description": "Gherkin linter and fixer",
    "type": "project",
    "require": {
        "php": "^8.1",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^5.0@beta",
        "symfony/console": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/filesystem": "^6.0",
        "cucumber/gherkin": "^24.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DTL\\GherkinLint\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DTL\\GherkinLint\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Daniel Leech",
            "email": "dan.t.leech@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "symfony/var-dumper": "^6.0",
        "symfony/process": "^6.0",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "scripts": {
        "integrate": [
            "vendor/bin/php-cs-fixer fix",
            "vendor/bin/psalm",
            "vendor/bin/phpunit"
        ]
    }
}
